<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FBActivity">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/share_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/dark_fall"
        android:backgroundTint="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/share_board"
        android:layout_width="wrap_content"
        android:layout_height="500dp"
        android:src="@drawable/board_long"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/share_plate"
        style="@style/btnStyle2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="100dp"
        />

    <ph.edu.dlsu.mobdeve.ang.silvestre.dienosaur.TextOutline
        android:id="@+id/share_title"
        style="@style/textSubheading"
        android:textSize="32sp"
        android:text="@string/share"
        android:textAllCaps="true"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:outlineColor="@color/outline"
        app:outlineSize="5dp"
        app:layout_constraintTop_toTopOf="@id/share_plate"
        app:layout_constraintStart_toStartOf="@id/share_plate"
        app:layout_constraintEnd_toEndOf="@id/share_plate"
        android:layout_marginTop="2dp"
        />

    <ph.edu.dlsu.mobdeve.ang.silvestre.dienosaur.TextOutline
        android:id="@+id/loggedin_label"
        style="@style/textSubheading"
        android:text="@string/loggedin_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/share_plate"
        app:layout_constraintStart_toStartOf="@+id/share_board"
        app:layout_constraintEnd_toEndOf="@+id/share_board"
        app:layout_constraintBottom_toTopOf="@+id/facebook_user_name"
        app:outlineColor="@color/outline"
        app:outlineSize="5dp"
        android:layout_marginTop="70dp"
        />

    <ph.edu.dlsu.mobdeve.ang.silvestre.dienosaur.TextOutline
        android:id="@+id/facebook_user_name"
        style="@style/textSubheading"
        android:text="John Doe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/loggedin_label"
        app:layout_constraintStart_toStartOf="@id/share_board"
        app:layout_constraintEnd_toEndOf="@id/share_board"
        app:layout_constraintBottom_toTopOf="@id/facebook_login_button"
        app:outlineColor="@color/outline"
        app:outlineSize="5dp" />

    <com.facebook.login.widget.LoginButton
        android:id="@+id/facebook_login_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        app:layout_constraintTop_toTopOf="@+id/share_board"
        app:layout_constraintStart_toStartOf="@+id/share_board"
        app:layout_constraintEnd_toEndOf="@+id/share_board"
        app:layout_constraintBottom_toBottomOf="@+id/share_board"
        />

    <FrameLayout
        android:id="@+id/settings_framelayout2"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout="@layout/fragment_bottom_btns"
        />

</androidx.constraintlayout.widget.ConstraintLayout>