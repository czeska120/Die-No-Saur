<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.FragmentCustomize">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/help1_board"
                android:layout_width="wrap_content"
                android:layout_height="500dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="125dp"
                android:src="@drawable/board_long" />

            <ImageView
                android:id="@+id/help1_plate"
                style="@style/btnStyle2"
                android:layout_alignBottom="@+id/help1_board"
                android:layout_marginBottom="480dp"/>

            <ph.edu.dlsu.mobdeve.ang.silvestre.dienosaur.TextOutline
                android:id="@+id/help1_title"
                style="@style/textSubheading"
                android:textSize="32sp"
                android:layout_alignTop="@id/help1_plate"
                android:layout_marginTop="2dp"
                android:text="SETTINGS"
                app:outlineColor="@color/outline"
                app:outlineSize="5dp" />

            <ph.edu.dlsu.mobdeve.ang.silvestre.dienosaur.TextOutline
                android:id="@+id/help1_back"
                style="@style/textSubheading"
                android:layout_alignTop="@id/help1_plate"
                android:layout_marginTop="74dp"
                android:layout_marginEnd="130dp"
                android:layout_marginBottom="10dp"
                android:text="Back"
                android:textAlignment="textStart"
                app:outlineColor="@color/outline"
                app:outlineSize="5dp" />

            <View
                android:id="@+id/help1_line1"
                android:layout_width="230dp"
                android:layout_height="1dp"
                android:layout_below="@+id/help1_back"
                android:layout_alignStart="@+id/help1_back"
                android:background="@color/text"/>

            <ph.edu.dlsu.mobdeve.ang.silvestre.dienosaur.TextOutline
                android:id="@+id/help1_charactertitle"
                style="@style/textSubheading"
                android:layout_alignTop="@id/help1_line1"
                android:layout_marginEnd="130dp"
                android:layout_marginBottom="10dp"
                android:text="CHARACTER"
                android:textAlignment="textStart"
                app:outlineColor="@color/outline"
                app:outlineSize="5dp" />

            <pl.droidsonroids.gif.GifImageView
                android:id="@+id/help1_dino"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_below="@+id/help1_line1"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="30dp"
                android:layout_marginHorizontal="30dp"
                android:src="@drawable/nico" />

            <ImageButton
                android:id="@+id/character_prev"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignTop="@+id/help1_dino"
                android:layout_centerVertical="true"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="30dp"
                android:layout_toStartOf="@+id/help1_dino"
                android:background="@drawable/btn_previous"
                android:scaleType="fitCenter" />

            <ImageButton
                android:id="@+id/character_next"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignTop="@+id/help1_dino"
                android:layout_centerVertical="true"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp"
                android:layout_toEndOf="@+id/help1_dino"
                android:background="@drawable/btn_next"
                android:scaleType="fitCenter" />

            <View
                android:id="@+id/help1_line2"
                android:layout_width="230dp"
                android:layout_height="1dp"
                android:layout_below="@+id/help1_dino"
                android:layout_alignStart="@+id/help1_back"
                android:background="@color/text"/>

            <ph.edu.dlsu.mobdeve.ang.silvestre.dienosaur.TextOutline
                android:id="@+id/help1_bgtitle"
                style="@style/textSubheading"
                android:layout_alignTop="@id/help1_line2"
                android:layout_marginEnd="130dp"
                android:layout_marginBottom="10dp"
                android:text="BACKGROUND"
                android:textAlignment="textStart"
                app:outlineColor="@color/outline"
                app:outlineSize="5dp" />

            <ph.edu.dlsu.mobdeve.ang.silvestre.dienosaur.TextOutline
                android:id="@+id/help1_bgbody"
                android:layout_width="wrap_content"
                style="@style/textHeader"
                android:textSize="40dp"
                android:layout_below="@id/help1_bgtitle"
                android:layout_marginBottom="10dp"
                android:text="FALL"
                android:textAlignment="center"
                app:outlineColor="@color/outline"
                app:outlineSize="5dp" />

            <ImageButton
                android:id="@+id/bg_prev"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignStart="@+id/character_prev"
                android:layout_alignTop="@+id/help1_bgbody"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="30dp"
                android:background="@drawable/btn_previous"
                android:scaleType="fitCenter" />

            <ImageButton
                android:id="@+id/bg_next"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignStart="@+id/character_next"
                android:layout_alignTop="@+id/help1_bgbody"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/btn_next"
                android:scaleType="fitCenter" />

            <ImageButton
                android:id="@+id/help1_next"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignEnd="@+id/help1_dino"
                android:layout_toEndOf="@+id/help1_dino"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:background="@drawable/btn_next"
                android:scaleType="fitCenter" />

        </RelativeLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>