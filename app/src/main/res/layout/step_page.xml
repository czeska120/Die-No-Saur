<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/help1_dino"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="50dp"
            android:layout_marginBottom="50dp"
            android:src="@drawable/nico" />

    <View
        android:id="@+id/help1_line2"
        android:layout_width="230dp"
        android:layout_height="1dp"
        android:layout_below="@+id/help1_dino"
        android:layout_centerHorizontal="true"
        android:background="@color/text"/>

    <ph.edu.dlsu.mobdeve.ang.silvestre.dienosaur.TextOutline
        android:id="@+id/help1_body"
        style="@style/textSubheading"
        android:layout_marginHorizontal="60dp"
        android:layout_below="@+id/help1_line2"
        android:layout_marginTop="30dp"
        android:text="Tilt left &amp; right to control your dinosaur"
        app:outlineColor="@color/outline"
        app:outlineSize="5dp" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>