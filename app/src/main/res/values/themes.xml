<resources xmlns:tools="http://schemas.android.com/tools"
    >
    <!-- Base application theme. -->
    <style name="Theme.DieNoSaur" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">#CE376C</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="textCredits">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@null</item>
        <item name="android:fontFamily">@font/fibberish</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:shadowColor">#D74E3B3B</item>
        <item name="android:shadowDx">-13</item>
        <item name="android:shadowDy">13</item>
        <item name="android:shadowRadius">1.5</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>

    <style name="textNoSize">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textAlignment">center</item>
        <item name="android:background">@null</item>
        <item name="android:fontFamily">@font/fibberish</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:shadowColor">#D74E3B3B</item>
        <item name="android:shadowDx">-13</item>
        <item name="android:shadowDy">13</item>
        <item name="android:shadowRadius">1.5</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_marginTop">5dp</item>
    </style>

    <style name="textHeader">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textAlignment">center</item>
        <item name="android:background">@null</item>
        <item name="android:fontFamily">@font/fibberish</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:shadowColor">#D74E3B3B</item>
        <item name="android:shadowDx">-13</item>
        <item name="android:shadowDy">15</item>
        <item name="android:shadowRadius">1.5</item>
        <item name="android:textSize">58sp</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="textSubheading">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textAlignment">center</item>
        <item name="android:background">@null</item>
        <item name="android:fontFamily">@font/fibberish</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:shadowColor">#D74E3B3B</item>
        <item name="android:shadowDx">-10</item>
        <item name="android:shadowDy">13</item>
        <item name="android:shadowRadius">1.5</item>
        <item name="android:textSize"> 25sp</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_marginTop">7dp</item>
    </style>

    <style name="btnStyle">
        <item name="android:layout_width">245dp</item>
        <item name="android:layout_height">55dp</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:background">@drawable/btn_round</item>
    </style>

    <style name="btnStyle2">
        <item name="android:layout_width">180dp</item>
        <item name="android:layout_height">38dp</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:background">@drawable/btn_round</item>
    </style>
</resources>